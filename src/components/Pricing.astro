---
const plans = [
  {
    duration: "1 Month",
    price: "11",
    features: [
      "1 Device Connection",
      "10000+ TV Channels",
      "Supports All Devices",
      "24/7 Instant Support"
    ]
  },
  {
    duration: "3 Months",
    price: "30",
    features: [
      "1 Device Connection",
      "10000+ TV Channels",
      "Supports All Devices",
      "24/7 Instant Support"
    ]
  },
  {
    duration: "6 Months",
    price: "55",
    features: [
      "1 Device Connection",
      "10000+ TV Channels",
      "Supports All Devices",
      "24/7 Instant Support"
    ]
  },
  {
    duration: "1 Year",
    price: "90",
    features: [
      "1 Device Connection",
      "10000+ TV Channels",
      "Supports All Devices",
      "24/7 Instant Support"
    ]
  }
];
---
<section id="pricing" class="bg-dark py-20">
  <div class="container mx-auto px-4">
    <h2 class="text-center mb-12">
      <span class="text-white">Explore Our</span>
      <span class="text-primary">IPTV Subscription</span>
      <span class="text-white">Plans</span>
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {plans.map(plan => (
        <div class="bg-secondary p-6 rounded-lg">
          <h3 class="text-white text-xl mb-4">{plan.duration}</h3>
          <div class="text-primary text-3xl font-bold mb-6">
            <sup class="text-sm">$</sup>{plan.price}
          </div>
          <ul class="text-gray-400 mb-6">
            {plan.features.map(feature => (
              <li class="mb-2 flex items-center">
                <span class="text-primary mr-2">âœ“</span>
                {feature}
              </li>
            ))}
          </ul>
          <a href="#" class="block text-center bg-primary text-dark px-6 py-3 rounded-lg font-semibold hover:bg-opacity-90 transition-all">
            Get Started
          </a>
        </div>
      ))}
    </div>
  </div>
</section>