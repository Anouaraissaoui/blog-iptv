---
import SEO from '../components/SEO.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
}

const {
  title,
  description = "Experience premium IPTV streaming with our reliable subscription service. Access thousands of channels, movies, and shows in HD quality.",
  image,
  type
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <SEO
      title={title}
      description={description}
      image={image}
      type={type}
    />
  </head>
  <body class="bg-dark">
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --accent: 0, 255, 132;
  }
  html {
    font-family: system-ui, sans-serif;
    background: #13151a;
    scroll-behavior: smooth;
  }
</style>